<br>

<main id="main" data-aos="fade-up">

  <!-- ======= Breadcrumbs ======= -->
  <section class="breadcrumbs">
    <div class="container">

      <div class="d-flex justify-content-between align-items-center">
        <h2>Лига "Гладиатори"</h2>
        <ol>
          <li><a href="index.html">Home</a></li>
          <li>Gladiators</li>
        </ol>
      </div>

    </div>
  </section><!-- End Breadcrumbs -->

  <section class="inner-page">
    <div class="container">
      <p>
        Сезон 2021
      </p>
    </div>
  </section>

  <div class="container">

      <table class="table table-striped">
        <thead class="thead-light">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Име на турнир:</th>
            <th scope="col">Начална дата:</th>
            <th scope="col">Статус:</th>
            <%- if admin_signed_in? %>
              <th scope="col"></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @gladiators.each.with_index(1) do |gladiator, i| %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= link_to gladiator.title, gladiator %></td>
              <td><%= gladiator.start_date.strftime('%d-%b-%Y  | %H:%Mч.') %></td>
              <td><b><%= gladiator.status%></b></td>

              <%- if admin_signed_in? %>
                <td><%= link_to 'Destroy', gladiator, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <% if current_admin %>
        <%= link_to 'Създай нов гладиатор', new_gladiator_path, class: 'btn btn-success' %></button>
      <% end %>
      </div>
  </main>
